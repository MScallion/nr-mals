{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "${NAME}-deployment-template",
    "creationTimestamp": null
  },
  "objects": [
    {
      "apiVersion": "security.devops.gov.bc.ca/v1alpha1",
      "kind": "NetworkSecurityPolicy",
      "metadata": {
        "finalizers": ["finalizer.security.devops.gov.bc.ca"],
        "name": "custom-allow-tools-to-${TAG_NAME}",
        "namespace": "${PROJECT_PREFIX}-${TAG_NAME}"
      },
      "spec": {
        "description": "Allow tools to communicate with ${TAG_NAME} to verify deployment\n",
        "destination": [["$namespace=${PROJECT_PREFIX}-${TAG_NAME}"]],
        "source": [["$namespace=${PROJECT_PREFIX}-tools"]]
      }
    },
    {
      "apiVersion": "security.devops.gov.bc.ca/v1alpha1",
      "kind": "NetworkSecurityPolicy",
      "metadata": {
        "name": "egress-internet-${PROJECT_PREFIX}-${TAG_NAME}",
        "namespace": "${PROJECT_PREFIX}-${TAG_NAME}"
      },
      "spec": {
        "description": "allow ${PROJECT_PREFIX}-${TAG_NAME} to talk to the internet\n",
        "destination": [["ext:network=any"]],
        "source": [["$namespace=${PROJECT_PREFIX}-${TAG_NAME}"]]
      }
    }
  ],
  "parameters": [
    {
      "name": "PROJECT_PREFIX",
      "displayName": "Name",
      "description": "The project prefix",
      "required": true,
      "value": "30245e"
    },
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the resources defined in this template.",
      "required": true,
      "value": "mals-app"
    },
    {
      "name": "TAG_NAME",
      "displayName": "Environment TAG name",
      "description": "The TAG name for this environment, e.g., dev, test, prod",
      "required": true,
      "value": "dev"
    },
    {
      "name": "FAKE_PARAMETER",
      "displayName": "Fake parameter",
      "description": "This parameter exists to trick genDepls.sh into thinking this template contains a DeploymentConfig",
      "required": false,
      "value": ""
    }
  ]
}
